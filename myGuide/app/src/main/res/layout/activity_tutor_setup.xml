<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    tools:context=".ui.TutorSetupActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.TutorSetupActivity"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/ibTutorProfileRegister"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:src="@drawable/user_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAboutRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="About"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibTutorProfileRegister" />

        <View
            android:id="@+id/sideLine1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/ibTutorProfileRegister"
            app:layout_constraintEnd_toStartOf="@id/ibTutorProfileRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ibTutorProfileRegister" />

        <View
            android:id="@+id/sideLine2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/ibTutorProfileRegister"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ibTutorProfileRegister"
            app:layout_constraintTop_toTopOf="@id/ibTutorProfileRegister" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/about_text_input_layout"
            android:layout_width="0dp"
            android:layout_height="156dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:paddingLeft="10dp"
            app:counterEnabled="true"
            app:counterMaxLength="140"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAboutRegistration">

            <EditText
                android:id="@+id/etAbout"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"

                android:layout_marginRight="10dp"
                android:background="@drawable/edittextbackground"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Tell us about you"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:paddingTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="116dp" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tvEducationRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Education"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_text_input_layout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEducationRegistration" />

        <ImageButton
            android:id="@+id/ibAddEducation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_text_input_layout"
            app:srcCompat="@android:drawable/ic_input_add" />

        <TextView
            android:id="@+id/tvCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Courses"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvEducation" />

        <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
            android:id="@+id/multipleItemSelectionSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:hintText="Select a course"
            android:background="@drawable/edittextbackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCourse" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Price"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/multipleItemSelectionSpinner" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPrice" />


        <Button
            android:id="@+id/btnSaveTutorProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#2196F3"
            android:text="Save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/isOnlineTutor"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tvZipcodeTutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Zipcode"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPrice" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/zipcode_text_input_layout_tutor"
            android:layout_width="300dp"
            android:layout_height="0dp"

            android:layout_marginTop="8dp"
            app:boxBackgroundColor="#F6F3F3"
            app:boxStrokeColor="#FBFBFB"
            app:endIconTint="#F6F4F4"
            app:hintTextColor="@color/light_blue"
            app:layout_constraintStart_toStartOf="@+id/tvZipcodeTutor"
            app:layout_constraintTop_toBottomOf="@+id/tvZipcodeTutor">

            <EditText
                android:id="@+id/etZipcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_edit_text_border"
                android:ems="10"
                android:hint="Zip code"
                android:inputType="number"
                android:minWidth="200sp" />


        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/isInpersonTutor"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            android:text="I will be able to give inperson tutoring."
            app:layout_constraintStart_toStartOf="@+id/zipcode_text_input_layout_tutor"
            app:layout_constraintTop_toBottomOf="@+id/zipcode_text_input_layout_tutor" />

        <CheckBox
            android:id="@+id/isOnlineTutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="I will be able to tutor online."
            app:layout_constraintStart_toStartOf="@+id/isInpersonTutor"
            app:layout_constraintTop_toBottomOf="@+id/isInpersonTutor" />

