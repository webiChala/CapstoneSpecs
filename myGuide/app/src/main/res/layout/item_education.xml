<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:paddingBottom="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/ivItemEducation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_education_icon" />

    <TextView
        android:id="@+id/tvSchoolItemEducation"
        android:layout_width="312dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Minnesota State University mankato jnewwfew"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivItemEducation"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDegreeItemEducation"
        android:layout_width="312dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Bachelors, degree "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tvSchoolItemEducation"
        app:layout_constraintTop_toBottomOf="@+id/tvSchoolItemEducation" />

    <TextView
        android:id="@+id/tvFieldOfStudyItemEducation"
        android:layout_width="312dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Computer Science"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvDegreeItemEducation"
        app:layout_constraintTop_toBottomOf="@+id/tvDegreeItemEducation" />

    <Button
        android:id="@+id/btnDeleteEducation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#D30B0B"
        android:text="Remove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFieldOfStudyItemEducation" />

    <Button
        android:id="@+id/ibEditEducation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#2196F3"
        android:text="Edit"
        app:layout_constraintEnd_toStartOf="@+id/btnDeleteEducation"
        app:layout_constraintTop_toBottomOf="@+id/tvFieldOfStudyItemEducation" />
</androidx.constraintlayout.widget.ConstraintLayout>